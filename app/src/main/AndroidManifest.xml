<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permisos de Notificaciones -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Permisos de Alarmas (Android 12+) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!-- Permiso para vibración -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoFinal"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Actividad de Login (pantalla principal) -->
        <activity
            android:name=".loginapp.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad Home (después del login) -->
        <activity
            android:name=".loginapp.HomeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".loginapp.LoginActivity" />

        <!-- Actividad de Recordatorios -->
        <activity
            android:name=".loginapp.RecordatoriosActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".loginapp.HomeActivity" />

        <!-- Actividad de Contactos -->
        <activity
            android:name=".loginapp.ContactosActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".loginapp.HomeActivity" />

        <!-- ✅ CRÍTICO: BroadcastReceiver para notificaciones programadas -->
        <receiver
            android:name=".loginapp.notifications.NotificationReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.proyectofinal.NOTIFICATION_ACTION" />
            </intent-filter>
        </receiver>

    </application>

</manifest>